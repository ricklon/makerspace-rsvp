# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your_random_secret_key_change_in_production

# Makerspace Branding (customize for your space)
MAKERSPACE_NAME="Your Makerspace Name"
MAKERSPACE_URL=https://yourspace.org
MAKERSPACE_EMAIL=events@yourspace.org

# Database Configuration
# For local development, this is handled by wrangler.toml
# For production, D1 binding is automatic

# Email Service - Resend (recommended)
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=events@yourspace.org

# OR SendGrid (alternative)
# SENDGRID_API_KEY=SG.your_sendgrid_api_key

# Admin Credentials
# Generate password hash with: node -e "console.log(require('bcryptjs').hashSync('your_password', 10))"
ADMIN_EMAIL=admin@yourspace.org
ADMIN_PASSWORD_HASH=$2a$10$your_bcrypt_hash_here

# Optional Integrations
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook

# Cloudflare (for deployment - get from Cloudflare dashboard)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Example for Fubar Labs:
# MAKERSPACE_NAME="Fubar Labs"
# MAKERSPACE_URL=https://fubarlabs.org
# MAKERSPACE_EMAIL=events@fubarlabs.org
# FROM_EMAIL=events@fubarlabs.org
