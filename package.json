{
  "name": "makerspace-rsvp",
  "version": "0.1.0",
  "description": "Open-source RSVP and attendance tracking system for makerspaces, hackerspaces, and community workshops",
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "remix vite:dev",
    "dev:remote": "remix vite:dev --remote",
    "build": "remix vite:build",
    "preview": "wrangler pages dev",
    "deploy": "pnpm build && wrangler pages deploy",
    "typecheck": "tsc",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "format": "prettier --write .",
    "validate": "pnpm typecheck && pnpm lint && pnpm test",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:prod": "wrangler d1 migrations apply fubar-rsvp --remote",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx db/seed.ts",
    "cf:tail": "wrangler pages deployment tail"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^2.14.0",
    "@remix-run/cloudflare-pages": "^2.14.0",
    "@remix-run/react": "^2.14.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.36.4",
    "isbot": "^5.1.21",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "resend": "^4.0.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@playwright/test": "^1.49.1",
    "@remix-run/dev": "^2.14.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^4.0.17",
    "autoprefixer": "^10.4.20",
    "better-sqlite3": "^12.6.0",
    "drizzle-kit": "^0.29.1",
    "eslint": "^9.17.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "happy-dom": "^15.11.7",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.17",
    "wrangler": "^3.99.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.1"
}
